# .env.example

# Security Configuration
# ----------------------
# JWT Secret: Secret key for JSON Web Tokens.  
JWT_SECRET='your_jwt_secret_here'

# Encryption Key: Key used for encrypting sensitive data.  
ENCRYPTION_KEY='your_encryption_key_here'

# API Keys
API_KEY='your_api_key_here'

# Database Configuration
# -----------------------
# TimescaleDB Connection
DATABASE_URL='postgres://user:password@localhost:5432/database_name'

# Cache Configuration
# ----------------------
# Redis Connection
REDIS_URL='redis://localhost:6379/0'

# Message Broker Configuration
# -----------------------------
# RabbitMQ Connection
RABBITMQ_URL='amqp://user:password@localhost:5672/'

# Core Service
# --------------------
CORE_SERVICE_URL='http://core_service:port'

# AI Brain
# --------------------
AI_BRAIN_URL='http://ai_brain:port'

# Sensors Configuration
SENSOR_URL='http://sensors:port'

# API Server Configuration
API_SERVER_URL='http://api_server:port'

# Dashboard Configuration
DASHBOARD_URL='http://dashboard:port'

# Monitoring Configuration
# -----------------------------
# Prometheus Configuration
PROMETHEUS_URL='http://prometheus:port'

# Grafana Configuration
GRAFANA_URL='http://grafana:port'

# Logging Configuration
LOGGING_URL='http://logging_service:port'

# Security Policies
# ------------------
ALLOWLISTED_IPS='127.0.0.1,192.168.1.*'
DENYLISTED_IPS='0.0.0.0/0'

# Threat Detection
THREAT_DETECTION_SERVICE_URL='http://threat_detection_service:port'

# Backup Configuration
BACKUP_SERVICE_URL='http://backup_service:port'

# Notifications Configuration
NOTIFICATION_SERVICE_URL='http://notification_service:port'

# GDPR Compliance
ENABLE_GDPR_COMPLIANCE='true'

# Performance Tuning
ENABLE_CACHE='true'

# Feature Flags
ENABLE_NEW_FEATURE='false'

# Third-party Integrations
INTEGRATION_SERVICE_URL='http://integration_service:port'

# Security Notes:
# - Ensure that sensitive information is kept safe and not exposed in logs.  
# - Regularly review security configurations and policies.  
# - Rotate secrets and keys periodically.  
# - Implement proper access controls and monitoring.

